{
  "respectGitignore": true,
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "ENABLE_LSP_TOOL": "1",
    "PATH": "C:\\Program Files\\nodejs;C:\\Users\\Maci\\.bun\\bin;C:\\Users\\Maci\\AppData\\Roaming\\npm;${PATH}",
    "CLAUDE_CODE_FILE_READ_MAX_OUTPUT_TOKENS": "50000",
    "CLAUDE_LEAD_MODE": "true",
    "CLAUDE_CODE_ADDITIONAL_DIRECTORIES_CLAUDE_MD": "1"
  },
  "attribution": {
    "commit": "Generated with Claude Code\n\nCo-Authored-By: Claude <noreply@anthropic.com>",
    "pr": "Generated with [Claude Code](https://claude.com/claude-code)"
  },
  "permissions": {
    "allow": [
      "Task",
      "Skill",
      "AskUserQuestion",
      "TaskCreate",
      "TaskUpdate",
      "TaskList",
      "TaskGet"
    ],
    "deny": [
      "Read",
      "Edit",
      "Write",
      "Bash",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Edit|Write|Bash|Glob|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "bun .claude/hooks/lead-enforcement.ts",
            "timeout": 5000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {                                       
            "type": "command",
            "command": "bun .claude/hooks/memory-inject.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun .claude/hooks/format-code.ts"
          },
          {
            "type": "command",
            "command": "bun .claude/hooks/typecheck-guard.ts",
            "timeout": 30000
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bun .claude/hooks/statusline.ts",
    "padding": 0
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": false
  },
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "Pensando",
      "Analizando",
      "Investigando",
      "Procesando",
      "Evaluando",
      "Planificando",
      "Construyendo",
      "Revisando",
      "Optimizando"
    ]
  },
  "language": "es",
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": [
      "git",
      "docker",
      "bun",
      "node"
    ]
  }
}
